<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.yoonlove.mapper.CsMapper">

<!--공지사항 쿼리-->
    <select id="selectNotice" resultType="com.example.yoonlove.dto.NoticeDto">
        SELECT * FROM notice where notice_id=1
    </select>

    <select id="selectListNotice" resultType="com.example.yoonlove.dto.NoticeDto">
        SELECT * FROM notice
    </select>

    <insert id="insertNotice" parameterType="com.example.yoonlove.dto.NoticeDto">
        insert into notice values(
        3,#{notice_title},#{notice_content},'관리자','2023-9-02',0,'test')
    </insert>

    <update id="updateNotice">
        update into notice values(
        '5번글','쿼리로 입력한제목','내용입니다','관리자','2023-9-01','2023-9-02',0,'테스트관리자')
    </update>

    <delete id="deleteNotice">
        delete from notice where notice_id='5번글'
    </delete>


    <!--QnA 쿼리-->
    <select id="selectQnA" resultType="com.example.yoonlove.dto.QnADto">
        SELECT * FROM qna where notice_id='1번글'
    </select>

    <select id="selectListQnA" resultType="com.example.yoonlove.dto.QnADto">
        SELECT * FROM qna
    </select>

    <insert id="insertQnA">
        insert into qna values(
        '5번글','쿼리로 입력한제목','내용입니다','관리자','2023-9-01','2023-9-02',0,'테스트관리자')
    </insert>

    <update id="updateQnA">
        insert into qna values(
        '5번글','쿼리로 입력한제목','내용입니다','관리자','2023-9-01','2023-9-02',0,'테스트관리자')
    </update>

    <delete id="deleteQnA">
        delete from qna where notice_id='5번글'
    </delete>
</mapper>