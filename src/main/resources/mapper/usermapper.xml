<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.yoonlove.mapper.UserMapper">
    <select id="selectUser" parameterType="com.example.yoonlove.dto.UserDto" resultType="com.example.yoonlove.dto.UserDto">
        SELECT * FROM users
        WHERE
        email = #{email}
        <if test="password != null and password != ''">
            AND password = #{password}
        </if>
    </select>

    <select id="selectUserBySessionId" parameterType="java.util.HashMap" resultType="java.util.HashMap">
        SELECT
        *
        FROM
        users
        WHERE
        sessionId = #{sessionId}
    </select>

    <insert id="insertUser" parameterType="java.util.HashMap">
        INSERT INTO user (email, password, userName) VALUES (#{email}, #{password}, #{userName})
    </insert>

    <update id="updatetUser" parameterType="java.util.HashMap">
        UPDATE
        user
        SET
        updatedAt = NOW()
        <if test="sessionId != null and sessionId != ''">
            , sessionId = #{sessionId}
        </if>
        <if test="expiredAt != null and expiredAt != ''">
            , expiredAt = #{expiredAt}
        </if>
        WHERE
        email = #{email}
    </update>

    <update id="updateUserSessionInit" parameterType="java.util.HashMap">
        UPDATE
        user
        SET
        updatedAt = NOW()
        , sessionId = NULL
        , expiredAt = NULL
        WHERE
        email = #{email}
    </update>
</mapper>