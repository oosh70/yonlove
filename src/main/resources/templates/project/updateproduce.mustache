<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>제작 수정</title>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    {{>layout/header}}
</head>
<body id="page-top">
{{>layout/sidebar}}
{{>layout/topbar}}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <div style="text-align: center; display: block; margin-top:50px;" >
                <h1 class="h3 mb-2 text-gray-800" >제작인원 수정</h1>

            <!-- DataTales Example -->
            <div class="card shadow mb-4" style="margin-top: 50px;">
                <div class="card-header py-3">

                        <form id="alert" action="/project/updateproduce/{{selectProduce.pd_id}}" method="get"
                              class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search ml-auto">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <td>이름 <input class="field1" name="pd_name" type="text" value="{{selectProduce.pd_name}}"/></td>
                                    <td>역할 <input class="field2" name="role" type="text" value="{{selectProduce.role}}"/></td>
                                    <td>배역 <input class="field3" name="casting" type="text" value="{{selectProduce.casting}}"/></td>
                                </tr>
                                </thead>
                            </table>
                            <div class="d-flex justify-content-center align-items-center">
                                <input type="submit" value="수정" class="btn btn-success"
                                   onclick="mappingurl('/project/updateproduce/{{selectProduce.pd_id}}', 3,'수정')"/>&nbsp;&nbsp;
                                <a href="javascript:history.back()" role="button" class="btn btn-secondary">취소</a>
                            </div>
                        </form>

                </div>
            </div>
        </div>
    </div>
</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
{{>layout/footer}}
</div>
</div>
<!-- End of Content Wrapper -->
<script>
    var url="/project/produce";
</script>
<script src="/static/js/cu_alert.js"></script>

{{>layout/bootstrapjs}}
</body>
</html>