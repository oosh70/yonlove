        <!-- Begin Page Content -->
        <div class="container-fluid">
            <h1 class="h2 mb-2 font-weight-bold text-gray-800" style="margin-top: 50px; text-align: center;">
                기획명: {{selectProduce.project_name}}
            </h1>

    <!-- DataTales Example -->
            <div class="card shadow mb-4" style="margin-top: 50px; margin-left:150px; margin-right:150px">
                <div class="card-header py-3">
                    <div class="d-flex justify-content-center align-items-center">

                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <tr>
                                <th style="text-align: center;">이름</th>
