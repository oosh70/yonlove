        </tr>

        <tr>
            <td bgcolor="pink">역할</td>
            <td align="left">{{selectProduce.role}}</td>
        </tr>

        <tr>
            <td bgcolor="pink">배역</td>
            <td align="left">{{selectProduce.casting}}</td>
        </tr>

        <tr>
            <td bgcolor="pink">기획아이디</td>
            <td align="left">{{selectProduce.project_id}}</td>
        </tr>

