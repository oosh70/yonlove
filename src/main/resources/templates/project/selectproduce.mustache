    <hr>
    <table board="1" cellpascing="0" cellpading="0">
        <tr>
            <td bgcolor="pink" width="70">제작인원 아이디 </td>
            <td align="left">{{selectProduce.pd_id}}</td>
        </tr>

        <tr>
            <td bgcolor="pink">이름</td>
