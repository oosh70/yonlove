        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div style="text-align: center; display: block; margin-top:50px;" >
                <h1 class="h3 mb-2 text-gray-800" >예산서 작성</h1>
            <!-- DataTales Example -->
            <div class="card shadow mb-4" style="margin-top: 50px;">
                <div class="card-header py-3">

<form id="alert" action="/project/insertbudget" method="get"
      class="d-flex justify-content-end form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search ml-auto">

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <tr>
            <td>프로젝트
                <select id="fk1" class="field1" name="project_id"></select></td>
            <td>항목명 <input class="field2" name="budget_name" type="text" placeholder="예산이름"/></td>
            <td>사용내역<input class="field3" name="budget_content" type="text" placeholder="예산이름"/></td>
            <td>금액 <input class="int1" name="budget_amount" type="number" placeholders="예산금액"/></td>

        </tr>
    </table>
    <div class="d-flex justify-content-between align-items-center">
        <span></span>
        <span>
            {{>layout/paging}}</span>
    <input type="submit" value="등록" onclick="mappingurl('/project/insertbudget', 3,'작성',1)"
           role="button" class="btn btn-primary"/>
    <a href="/project/budget" role="button" class="btn btn-info">목록</a>
    </div>
</form>
                </div>
            </div>
        </div>
    </div>
</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<!-- /.container-fluid -->
