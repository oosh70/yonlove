<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>예산 수정하기</title>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    {{>layout/header}}
</head>

<body id="page-top">
{{>layout/sidebar}}
{{>layout/topbar}}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

    <!-- Begin Page Content -->
    <div class="container-fluid">
        <h1 class="h3 mb-2 text-gray-800" style="margin-top: 50px;">
            항목이름: {{selectBudget.budget_name}}</h1>
        <!-- DataTales Example -->
        <div class="card shadow mb-4" style="margin-top: 50px; margin-left:150px; margin-right:150px;">
            <div class="card-header py-3">
    <hr>
                <form id="alert" action="/project/updatebudget/{{selectBudget.budget_id}}" method="get">
                  <table class="table table-bordered" id="dataTable" width="70%" cellspacing="0">
                        <tr>
                            <td bgcolor="pink" style="text-align: center;">기획명</td>
                            <td align="left">{{selectBudget.project_name}}</td>
                        </tr>
                        <tr>
                            <td bgcolor="pink" style="text-align: center;">항목명</td>
                            <td align="left"><input class="field1" name="budget_name" type="text" value="{{selectBudget.budget_name}}"></td>
                        </tr>
                        <tr>
                            <td bgcolor="pink" style="text-align: center;">내용</td>
                            <td align="left"><input class="field2" name="budget_content" type="text" value="{{selectBudget.budget_content}}"></td>
                        </tr>
                        <tr>
                            <td bgcolor="pink" style="text-align: center;">금액</td>
                            <td align="left"><input class="int1" name="budget_amount" type="number" value="{{selectBudget.budget_amount}}">원</td>
                        </tr>
                    </table>
                    <hr>
                        <div class="d-flex justify-content-center align-items-center">
                        <input type="submit" value="수정" role="button" class="btn btn-success"
                               onclick="mappingurl('/project/updatebudget/{{selectBudget.budget_id}}', 2,'수정',1)" />&nbsp;&nbsp;
                            <a href="javascript:history.back()" role="button" class="btn btn-secondary">취소</a>
                        </div>
                </form>

            </div>
        </div>
    </div>
</div>

</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
{{>layout/footer}}
</div>
<!-- End of Content Wrapper -->
<script src="/static/js/cu_alert.js"></script>

<script>
    var url = "/project/budget";
</script>

{{>layout/bootstrapjs}}
</body>
</html>