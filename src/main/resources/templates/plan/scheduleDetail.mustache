        <td>소품<input name="prop" type="text"  value="{{scheduleDetail.prop}}"></td>
        <td>연출/제작<input name="direct" type="text" value="{{scheduleDetail.direct}}" ></td>
        <td>기획ID<input name="project_id" type="text" value="{{scheduleDetail.project_id}}" ></td>


    </tr>


</table>
