<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>시나리오 작성</title>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/static/js/cu_alert.js"></script>
    {{>layout/header}}
</head>

<body>
{{>layout/sidebar}}
{{>layout/topbar}}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">


        <div class="container-fluid">

            <!-- Page Heading -->
            <div style="text-align: center; display: block; margin-top:100px;" >

                <!-- DataTales Example -->
                <div class="card shadow mb-4" style="margin-top: 150px; margin-right: 300px; margin-left: 300px">
                    <div class="card-header py-3">

<form id="alert" action="/scenario/insertscenario" method="get">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
    <tr>
            <td>프로젝트
                <select id="fk1" name="project_id"></select></td>
            <td>제목
                <input class="field1" name="scenario_name" type="text"></td>
            <td>시나리오 번호
                <input  class="int1" name="scenario_num" type="number" placeholder="미입력시 자동입력"></td>
        </tr>
        </thead>
        <tbody>

        <tr>
            <td colspan="3"><textarea class="field2" name="scenario_content" cols="50" rows="20"></textarea></td>
        </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-center align-items-center">
    <input type="submit" value="등록" role="button" class="btn btn-primary"
           onclick="mappingurl('/scenario/insertscenario',2,'작성',1)"> &nbsp;&nbsp;
    <a href="/scenario/scenario" role="button" class="btn btn-secondary">취소</a>
    </div>
</form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <br/>
</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<!-- End of Main Content -->
{{>layout/footer}}
