<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/static/js/cu_alert.js"></script>

    {{>layout/header}}
</head>

<body id="page-top">
{{>layout/sidebar}}
{{>layout/topbar}}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">
            <!-- Page Heading -->
            <div style="text-align: center; display: block; margin-top:50px;" >
                <h1 class="h3 mb-2 text-gray-800" >시나리오 수정</h1>

            <!-- DataTales Example -->
            <div class="card shadow mb-4" style="margin-top: 50px;">
                <div class="card-header py-3">
                    <div class="table-responsive">

<form id="alert" method="get" action="/scenario/{{updateScenario.scenario_id}}/updatescenario">
    <input name="scenario_id" type="hidden" value="{{updateScenario.scenario_id}}"/>
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <td>시나리오 제목
                <input class="field1" name="scenario_name" type="text" value="{{updateScenario.scenario_name}}"></td>
            <td>기획
                <input class="field2" name="project_id" type="text" value="{{updateScenario.project_name}}" readonly></td>
            <td>시나리오 번호
                <input class="field3" name="scenario_num" type="text" value="{{updateScenario.scenario_num}}"></td>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td colspan="3"><textarea class="field4" name="scenario_content" cols="50" rows="20">{{updateScenario.scenario_content}}</textarea></td>
        </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-center align-items-center">
    <input type="submit" value="수정" role="button" class="btn btn-success"
           onclick="mappingurl('/scenario/{{updateScenario.scenario_id}}/updatescenario',4,'수정')" /> &nbsp;&nbsp;
   <a href="javascript:history.back()" role="button" class="btn btn-secondary">취소</a>
    </div>
</form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <br/>
</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<!-- /.container-fluid -->

<!-- End of Main Content -->
{{>layout/footer}}

<!-- End of Main Content -->

<script>
    var url="scenario/scenario";
</script>

<script src="/static/js/search.js"></script>
<!-- 페이징 처리와 관련된 부트스트랩 라이브러리-->
<script src="/static/bootstrap/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/static/bootstrap/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- 페이징 처리와 관련된 부트스트랩 라이브러리 -->
<script src="/static/bootstrap/js/demo/datatables-demo.js"></script>

{{>layout/bootstrapjs}}
</body>
</html>