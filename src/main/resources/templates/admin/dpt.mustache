<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>회원(user)</title>
    {{>layout/header}}
</head>
<body id="page-top">
{{>layout/sidebar}}
{{>layout/topbar}}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">
            <h1 class="h3 mb-2 text-gray-800" style="margin-top: 50px;">부서 현황</h1>
            <!-- DataTales Example -->
            <div class="card shadow mb-4" style="margin-top: 50px;">
                <div class="card-header py-3">
                    <!--검색 -->
                    <form action="/admin/department" method="get"
                          class="d-flex justify-content-end form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search ml-auto">

                        <div class="input-group">
                            <select id="searchType" name="searchType">
                                <option value="all">선택</option>
                                <option value="title">제목</option>
                                <option value="writer">작성자</option>
                                <!-- 필요한 항목 추가 -->
                            </select>

                            <input id="search" name="search" type="text" style="width: 150px;"
                                   class="form-control bg-light border-0 small" placeholder="Search for..."
                                   aria-label="Search" aria-describedby="basic-addon2">

                            <div class="input-group-append">
                                <input class="btn btn-primary" type="submit" value="검색">
                            </div>
                        </div>
                    </form>

                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th style="text-align: center;">부서명</th>
                                <th style="text-align: center;">부서기능</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#selectListDpt}}
                                <tr>
                                    <td style="text-align: center;"><a
                                            href="/admin/{{dpt_id}}/selectdpt">{{dpt_name}}</a></td>
                                    <td style="text-align: center;">{{dpt_function}}</td>
                                </tr>
                            {{/selectListDpt}}
                            </tbody>
                        </table>

                        <!--페이징 처리 레이아웃-->
                        <div class="d-flex justify-content-between align-items-center">
                            <span></span>
                            <span>{{>layout/paging}}</span>
                            <a href="/admin/insertdptview" role="button" class="btn btn-primary">작성</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <br/>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
{{>layout/footer}}
</div>
<!-- End of Content Wrapper -->

<script>
    var url = "/admin/department";
</script>

<script src="/static/js/search.js"></script>


{{>layout/bootstrapjs}}
</body>
</html>
