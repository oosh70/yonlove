<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>회원(user)</title>
    {{>layout/header}}
</head>
<body id="page-top">
{{>layout/sidebar}}
{{>layout/topbar}}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->


        <!-- Begin Page Content -->
        <div class="container-fluid">
            <h1 class="h3 mb-2 text-gray-800" style="margin-top: 50px;">회원 정보</h1>
            <!-- DataTales Example -->
            <div class="card shadow mb-4" style="margin-top: 50px;">
                <div class="card-header py-3">
                    <!--검색 -->

                <form id="alert" method="get" action="/admin/{{selectUser.user_id}}/updateuser>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th style="text-align: center;">회원ID<input name="user_id" type="text" value="{{selectUser.user_id}}" ></th>
                                    <th style="text-align: center;">이름<input name="user_name" type="text" value="{{selectUser.user_name}}" ></th>
                                    <th style="text-align: center;">닉네임<input name="nickname" type="text" value="{{selectUser.nickname}}" ></th>
                                    <th style="text-align: center;">핸드폰<input name="phone" type="text" value="{{selectUser.phone}}" ></th>
                                    <th style="text-align: center;">E-mail<input name="email" type="text" value="{{selectUser.email}}" ></th>
                                </tr>

                                <tr>
                                    <th style="text-align: center;">우편번호<input name="zip_code" type="text" value="{{selectUser.zip_code}}" ></th>
                                    <th style="text-align: center;">주소<input name="address1" type="text" value="{{selectUser.address1}}" ></th>
                                    <th style="text-align: center;">주소2<input name="address2" type="text" value="{{selectUser.address2}}" ></th>
                                    <th style="text-align: center;">상세주소<input name="address3" type="text" value="{{selectUser.address3}}" ></th>
                                    <th style="text-align: center;">기업회원여부<input name="company_user" type="text" value="{{selectUser.company_user}}" ></th>
                                </tr>

                                <tr>
                                    <th style="text-align: center;">회원등급<input name="grade" type="text" value="{{selectUser.grade}}" ></th>
                                    <th style="text-align: center;">권한<input name="authority" type="text" value="{{selectUser.authority}}" ></th>
                                    <th style="text-align: center;">가입일<input name="sign_date" type="text" value="{{selectUser.sign_date}}" ></th>
                                    <th style="text-align: center;">소속회사<input name="company_name" type="text" value="{{selectCompany.company_name}}" ></th>
                                    <th style="text-align: center;">부서<input name="dpt_name" type="text" value="{{selectDpt.dpt_name}}" ></th>
                                </tr>

                                </thead>

                            </table>

                        </div>


                    <div style="text-align: center">
                        <button type="submit" class="btn btn-primary" onclick="mappingurl('/admin/{{selectUser.User_id}}/updateuser',11,'수정')">등록</button>
                        <button class="btn btn-secondary" onclick="location.href='/admin/user'">취소</button>
                    </div>
                    </form>
                </div>

            </div>

        </div>
            <br/>


        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>
        <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->
    {{>layout/footer}}
</div>
<!-- End of Content Wrapper -->
{{>layout/bootstrapjs}}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/static/js/cu_alert.js"></script>
</body>
</html>
