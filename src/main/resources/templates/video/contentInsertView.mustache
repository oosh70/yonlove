<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>영상 게시글 작성</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/static/js/cu_alert.js"></script>
    {{>layout/header}}
</head>
<body id="page-top">
{{>layout/sidebar}}
{{>layout/topbar}}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

    <div class="container-fluid">
        <div style="text-align: center; display: block; margin-top:40px;" > <!-- 수정 ! 마진 탑 100->수정 -->
            <h1 class="h3 mb-2 text-gray-800" >게시글 작성</h1>
        </div>

        <!-- DataTales Example -->
        <div class="card shadow mb-4" style="margin-top: 50px; margin-right: 300px; margin-left: 300px">
            <div class="card-header py-3">

    <form id="alert" action="/vd/contentInsert" method="get">


        <div style="margin-left: 15%; margin-right: 15%;  margin-top: 5%;">
            <div style="display: inline-block;">

                <div class="mb-3" style="text-align: center; display: inline-block;">
                    <label for="formGroupExampleInput" class="form-label" style="display: block;"><strong>영상 제목</strong>
                        <input id="formGroupExampleInput" class="field1 card shadow mb-4" name="video_name" type="text"   style="width: 100%; text-align: center">
                    </label> </div>

                    <div class="mb-3" style="text-align: center; display: inline-block;">
                    <label for="formGroupExampleInput" class="form-label" style="display: block;"><strong>영상 설명</strong>
                        <input id="formGroupExampleInput" class="field2 card shadow mb-4" name="video_sub" type="text"   style="width: 100%; text-align: center">
                    </label> </div>



                <div class="mb-3" style="text-align: center; display: inline-block;">
                    <label for="formGroupExampleInput" class="form-label" style="display: block;"><strong>영상 주소</strong>
                        <input id="formGroupExampleInput" class="field3 card shadow mb-4" name="video_url" type="text" style="width: 100%; text-align: center">
                    </label> </div>
                <div class="mb-3" style="text-align: center; display: inline-block;">
                    <label for="formGroupExampleInput" class="form-label" style="display: block;"><strong>업로드날짜</strong>
                        <input id="formGroupExampleInput" class="field4 card shadow mb-4" name="upload_date" type="date" style="width: 200px; text-align: center">
                    </label> </div>
                <div class="mb-3" style="text-align: center; display: inline-block;">
                    <label for="formGroupExampleInput" class="form-label" style="display: block;"><strong>영상수익</strong>
                        <input id="formGroupExampleInput" class="field5 card shadow mb-4" name="video_profit" type="number" style="width: 100%; text-align: center">
                    </label> </div>
                <div class="mb-3" style="text-align: center; display: inline-block;">
                    <label for="formGroupExampleInput" class="form-label" style="display: block;"><strong>좋아요수</strong>
                        <input id="formGroupExampleInput" class="field6 card shadow mb-4" name="like_cnt"  type="number" style="width: 100%; text-align: center">
                    </label> </div>
                <div class="mb-3" style="text-align: center; display: inline-block;">
                    <label for="formGroupExampleInput" class="form-label" style="display: block;"><strong>조회수</strong>
                        <input id="formGroupExampleInput" class="field7 card shadow mb-4" name="video_view" type="number" style="width: 100%; text-align: center">
                    </label> </div>
                <div class="mb-3" style="text-align: center; display: inline-block;">
                    <label for="formGroupExampleInput" class="form-label" style="display: block;"><strong>프로젝트ID</strong>
                        <input id="formGroupExampleInput" class="field8 card shadow mb-4" name="project_id" type="text" style="width: 100%; text-align: center">
                    </label> </div>

        </div>

            <div style="display: flex; justify-content: center;">
                <button type="submit" class="btn btn-primary" onclick="mappingurl('/vd/contentInsert',8,'작성')">등록</button> &nbsp; &nbsp;
                <a href="/vd/video" class="btn btn-secondary" style="text-decoration: none;">취소</a>
            </div>

        </div>
    </form>

    </div>
    <!--<div class="card-body">
    </div>-->

    </div>
    <br/>  <!-- 추가 -->
</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
</div>
<!-- End of Content Wrapper -->
<br/>


<script>
    var url="vd/video";
</script>
<script src="/static/js/cu_alert.js"></script>

{{>layout/bootstrapjs}}
</body>
</html>
